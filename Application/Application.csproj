<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <LangVersion>latest</LangVersion>
        
        <!-- Define custom variable -->
        <EnableYourToolsMediatorGeneratedCode>true</EnableYourToolsMediatorGeneratedCode>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\YourTools.Mapper\YourTools.Mapper.csproj" 
                          OutputItemType="Analyzer"
                          PrivateAssets="all"/>

        <CompilerVisibleProperty Include="EnableYourToolsMediatorGeneratedCode" />
        <ProjectReference Include="..\YourTools.Mediator\YourTools.Mediator.csproj" 
                          OutputItemType="Analyzer"
                          PrivateAssets="all"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="AutoMapper" Version="15.0.1" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.6" />
    </ItemGroup>
    
</Project>
